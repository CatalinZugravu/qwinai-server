# QwinAI Production Server Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/qwinai_production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qwinai_production
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=true

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Server Configuration
PORT=3000
NODE_ENV=production
API_VERSION=v1

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
ADMIN_RESET_KEY=your_admin_reset_key_for_user_resets

# CORS Configuration
ALLOWED_ORIGINS=https://your-android-app-domain.com,https://your-web-app.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_FILE_UPLOADS=20

# File Processing Configuration
MAX_FILE_SIZE=52428800
MAX_CONCURRENT_PROCESSING=10
TEMP_FILE_TTL=1800000
PROCESSING_TIMEOUT=300000

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_MONITORING=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
ALERT_EMAIL=admin@yourdomain.com
ALERT_WEBHOOK=https://your-monitoring-service.com/webhook

# SSL/TLS Configuration (if self-hosting)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# Deployment Platform Specific
# Railway (recommended)
RAILWAY_STATIC_URL=your-app-name.up.railway.app

# Heroku
HEROKU_APP_NAME=your-app-name

# DigitalOcean
DO_APP_NAME=your-app-name

# Custom Domain
CUSTOM_DOMAIN=api.yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key